<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent">

    <com.readboy.wearlauncher.view.IconTextView
        android:id="@+id/app_icon_tvid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:maxLines="1"
        android:drawablePadding="2px"
        android:gravity="center_horizontal"/>

    <com.readboy.wearlauncher.view.IconImageView
        android:id="@+id/app_icon_ivid"
        android:layout_width="@dimen/app_list_icon_width"
        android:layout_height="@dimen/app_list_icon_width"
        android:scaleType="centerCrop"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/app_name_tvid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:maxLines="1"
        android:visibility="gone"/>
</LinearLayout>